---
export interface Props {
  title: string;
  description: string;
  pubDate: string | Date;
  author: string;
  image?: {
    url: string;
    alt: string;
  };
  tags?: string[];
}

// Access frontmatter data from Astro.props.frontmatter for markdown files
const frontmatter = Astro.props.frontmatter || Astro.props;
const { title, description, pubDate, author, image, tags } = frontmatter;

const dateObj = pubDate ? new Date(pubDate) : new Date();
const formattedDate = dateObj.toLocaleDateString('en-US', {
  month: 'long',
  day: 'numeric',
  year: 'numeric'
});

// Post navigation data
const allPosts = [
  { title: "Goto in Clojure: Why I Built It and Why It's Fun", url: "/posts/post-1/" },
  { title: "Introducing go-silo: Markdown for File Structures & Contents", url: "/posts/post-2/" },
  { title: "Mage at Metabase: A Unified Task Runner Built for a Growing Engineering Org", url: "/posts/post-3/" },
  { title: "Glick80: When Functional Purity Meets Retro Gaming", url: "/posts/post-4/" }
];

const currentUrl = Astro.url.pathname;
const currentIndex = allPosts.findIndex(post => post.url === currentUrl);
const prevPost = currentIndex > 0 ? allPosts[currentIndex - 1] : null;
const nextPost = currentIndex < allPosts.length - 1 ? allPosts[currentIndex + 1] : null;
---

<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content={description} />
  <meta name="author" content={author} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="article" />
  <meta property="og:url" content={`https://escherize.com${Astro.url.pathname}`} />
  <meta property="article:author" content={author} />
  <meta property="article:published_time" content={dateObj.toISOString()} />
  {tags && tags.length > 0 && (
    <>
      {tags.map(tag => (
        <meta property="article:tag" content={tag} />
      ))}
    </>
  )}
  {image && (
    <>
      <meta property="og:image" content={image.url} />
      <meta property="og:image:alt" content={image.alt} />
    </>
  )}
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:creator" content="@escherize" />
  <title>{title}</title>
  <style>
    :root {
      --bg: #0f172a;
      --bg-alt: #020617;
      --fg: #e5e7eb;
      --fg-muted: #9ca3af;
      --accent: #38bdf8;
      --accent-hover: #0ea5e9;
      --accent-soft: rgba(56, 189, 248, 0.12);
      --border: #1f2937;
      --radius-lg: 14px;
      --radius-xl: 22px;
      --shadow-soft: 0 18px 45px rgba(15, 23, 42, 0.8);
      --shadow-chip: 0 8px 20px rgba(15, 23, 42, 0.7);
      --code-bg: rgba(15, 23, 42, 0.95);
      --code-border: rgba(56, 189, 248, 0.2);
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "SF Pro Text",
        "Segoe UI", sans-serif;
      background: radial-gradient(circle at top, #1e293b 0, #020617 55%, #000 100%);
      color: var(--fg);
      line-height: 1.7;
      -webkit-font-smoothing: antialiased;
      min-height: 100vh;
    }

    .container {
      max-width: 820px;
      margin: 0 auto;
      padding: 40px 20px;
    }

    .nav {
      margin-bottom: 40px;
    }

    .nav a {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      color: var(--fg-muted);
      text-decoration: none;
      font-size: 0.9rem;
      padding: 6px 12px;
      border-radius: 999px;
      border: 1px solid rgba(156, 163, 175, 0.3);
      background: radial-gradient(circle at top, rgba(56, 189, 248, 0.08), rgba(15, 23, 42, 0.96));
      transition: all 0.2s ease;
    }

    .nav a:hover {
      color: var(--fg);
      border-color: var(--accent);
      background: radial-gradient(circle at top, rgba(56, 189, 248, 0.15), rgba(15, 23, 42, 0.98));
      transform: translateY(-1px);
    }

    .post-header {
      margin-bottom: 36px;
      padding: 24px 28px;
      background: linear-gradient(135deg, rgba(15, 23, 42, 0.85), rgba(15, 23, 42, 0.8));
      border-radius: 20px;
      border: 1px solid rgba(148, 163, 184, 0.12);
      backdrop-filter: blur(12px);
    }

    .post-title {
      margin: 0 0 12px;
      font-size: 1.75rem;
      line-height: 1.3;
      letter-spacing: -0.01em;
      color: var(--fg);
      font-weight: 600;
    }

    @media (max-width: 640px) {
      .post-title {
        font-size: 1.5rem;
      }
    }

    .post-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      margin-bottom: 20px;
      font-size: 0.9rem;
      color: var(--fg-muted);
    }

    .meta-item {
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .meta-item::before {
      content: '';
      width: 4px;
      height: 4px;
      border-radius: 50%;
      background: var(--accent);
    }

    .post-description {
      font-size: 1.1rem;
      color: var(--fg-muted);
      line-height: 1.6;
      margin-bottom: 20px;
    }

    .tags {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }

    .tag {
      font-size: 0.75rem;
      padding: 4px 10px;
      border-radius: 999px;
      border: 1px solid rgba(148, 163, 184, 0.4);
      background: radial-gradient(circle at top left, rgba(56, 189, 248, 0.15), rgba(15, 23, 42, 0.9));
      color: #e5e7eb;
      box-shadow: var(--shadow-chip);
      cursor: crosshair;
    }

    .post-content {
      background: linear-gradient(135deg, rgba(15, 23, 42, 0.96), rgba(15, 23, 42, 0.92));
      border-radius: 24px;
      padding: 40px;
      border: 1px solid rgba(148, 163, 184, 0.12);
      backdrop-filter: blur(18px);
      box-shadow: 0 12px 30px rgba(15, 23, 42, 0.6);
    }

    @media (max-width: 640px) {
      .post-content {
        padding: 24px;
      }
    }

    /* Typography */
    .post-content h1 {
      margin: 2.5rem 0 1.5rem;
      font-size: 2rem;
      font-weight: 700;
      letter-spacing: -0.02em;
      color: var(--fg);
      border-bottom: 1px solid var(--border);
      padding-bottom: 0.5rem;
    }

    .post-content h1:first-child {
      margin-top: 0;
    }

    .post-content h2 {
      margin: 2rem 0 1rem;
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--fg);
      letter-spacing: -0.01em;
    }

    .post-content h3 {
      margin: 1.5rem 0 0.75rem;
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--fg);
    }

    .post-content p {
      margin: 1.25rem 0;
      color: #d1d5db;
    }

    .post-content a {
      color: var(--accent);
      text-decoration: none;
      border-bottom: 1px solid rgba(56, 189, 248, 0.3);
      transition: all 0.2s ease;
    }

    .post-content a:hover {
      color: var(--accent-hover);
      border-bottom-color: var(--accent-hover);
    }

    .post-content strong {
      color: var(--fg);
      font-weight: 600;
    }

    .post-content em {
      font-style: italic;
      color: var(--fg-muted);
    }

    .post-content ul,
    .post-content ol {
      margin: 1.25rem 0;
      padding-left: 1.75rem;
      color: #d1d5db;
    }

    .post-content li {
      margin: 0.5rem 0;
    }

    .post-content li::marker {
      color: var(--accent);
    }

    .post-content blockquote {
      margin: 1.5rem 0;
      padding: 1rem 1.5rem;
      border-left: 3px solid var(--accent);
      background: radial-gradient(circle at top left, rgba(56, 189, 248, 0.08), rgba(15, 23, 42, 0.95));
      border-radius: 8px;
      font-style: italic;
      color: var(--fg-muted);
    }

    .post-content blockquote p {
      margin: 0.5rem 0;
    }

    .post-content code {
      font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Mono', monospace;
      font-size: 0.85em;
      padding: 0.2em 0.4em;
      background: var(--code-bg);
      border: 1px solid var(--code-border);
      border-radius: 6px;
      color: var(--accent);
    }

    .post-content pre {
      margin: 1.5rem 0;
      padding: 1.25rem;
      background: var(--code-bg);
      border: 1px solid var(--code-border);
      border-radius: 12px;
      overflow-x: auto;
      box-shadow: inset 0 2px 8px rgba(0, 0, 0, 0.3);
    }

    .post-content pre code {
      font-size: 0.9em;
      padding: 0;
      background: transparent;
      border: none;
      color: var(--fg);
      line-height: 1.6;
    }

    .post-content hr {
      margin: 2.5rem 0;
      border: none;
      height: 1px;
      background: linear-gradient(90deg, 
        transparent, 
        var(--border) 20%, 
        var(--border) 80%, 
        transparent
      );
    }

    .post-content table {
      width: 100%;
      margin: 1.5rem 0;
      border-collapse: collapse;
      border: 1px solid var(--border);
      border-radius: 8px;
      overflow: hidden;
    }

    .post-content th {
      background: rgba(15, 23, 42, 0.95);
      padding: 0.75rem;
      text-align: left;
      font-weight: 600;
      color: var(--fg);
      border-bottom: 1px solid var(--border);
    }

    .post-content td {
      padding: 0.75rem;
      border-bottom: 1px solid rgba(31, 41, 55, 0.5);
    }

    .post-content tr:last-child td {
      border-bottom: none;
    }

    .post-content img {
      max-width: 100%;
      height: auto;
      border-radius: 12px;
      margin: 1.5rem 0;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
    }

    .post-navigation {
      margin-top: 60px;
      padding: 32px;
      background: linear-gradient(135deg, rgba(15, 23, 42, 0.96), rgba(15, 23, 42, 0.92));
      border-radius: 20px;
      border: 1px solid rgba(148, 163, 184, 0.12);
      backdrop-filter: blur(12px);
    }

    .post-nav-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 24px;
    }

    @media (max-width: 640px) {
      .post-nav-grid {
        grid-template-columns: 1fr;
        gap: 16px;
      }
    }

    .post-nav-item {
      display: block;
      text-decoration: none;
      padding: 16px;
      border-radius: 12px;
      border: 1px solid rgba(148, 163, 184, 0.2);
      background: radial-gradient(circle at top left, rgba(56, 189, 248, 0.08), rgba(15, 23, 42, 0.95));
      transition: all 0.2s ease;
    }

    .post-nav-item:hover {
      border-color: var(--accent);
      background: radial-gradient(circle at top left, rgba(56, 189, 248, 0.15), rgba(15, 23, 42, 0.98));
      transform: translateY(-1px);
    }

    .post-nav-item.prev {
      text-align: left;
    }

    .post-nav-item.next {
      text-align: right;
    }

    .post-nav-item.only {
      grid-column: 1 / -1;
      text-align: center;
    }

    .post-nav-label {
      font-size: 0.8rem;
      color: var(--fg-muted);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 4px;
      display: block;
    }

    .post-nav-title {
      font-size: 0.95rem;
      color: var(--fg);
      font-weight: 500;
      line-height: 1.3;
    }

    .post-nav-item:hover .post-nav-title {
      color: var(--accent);
    }

    .footer {
      margin-top: 40px;
      padding-top: 30px;
      border-top: 1px solid var(--border);
      text-align: center;
    }

    .footer a {
      color: var(--accent);
      text-decoration: none;
      font-size: 0.9rem;
    }

    .footer a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <nav class="nav">
      <a href="/">← Back to Home</a>
    </nav>

    <article>
      <header class="post-header">
        <h1 class="post-title">{title}</h1>
        <div class="post-meta">
          <span class="meta-item">{author}</span>
          <span class="meta-item">{formattedDate}</span>
        </div>
        {description && <p class="post-description">{description}</p>}
        {tags && tags.length > 0 && (
          <div class="tags">
            {tags.map(tag => <span class="tag">{tag}</span>)}
          </div>
        )}
      </header>

      <div class="post-content">
        <slot />
      </div>
    </article>

    {(prevPost || nextPost) && (
      <nav class="post-navigation" aria-label="Post navigation">
        <div class="post-nav-grid">
          {prevPost && (
            <a href={prevPost.url} class="post-nav-item prev">
              <span class="post-nav-label">← Previous</span>
              <span class="post-nav-title">{prevPost.title}</span>
            </a>
          )}
          {!prevPost && nextPost && (
            <div></div>
          )}
          {nextPost && (
            <a href={nextPost.url} class={`post-nav-item ${!prevPost ? 'only next' : 'next'}`}>
              <span class="post-nav-label">Next →</span>
              <span class="post-nav-title">{nextPost.title}</span>
            </a>
          )}
        </div>
      </nav>
    )}

    <footer class="footer">
      <a href="/blog/">← All Posts</a> • <a href="/">Return to Home</a>
    </footer>
  </div>
</body>
</html>